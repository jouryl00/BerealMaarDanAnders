<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crudfototut.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
    Text="Welcome to .NET MAUI!"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />
        <Button 
            x:Name="ProfileButton"
        Text="Profile"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
            Clicked="ProfileButton_Clicked"/>
        
        <Button 
            x:Name="FeedButton"
        Text="Feed"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
            Clicked="FeedButton_Clicked"
            />
        <Button 
            x:Name="AssignmentsButton"
        Text="Assignments"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
            Clicked="AssignmentsButton_Clicked"/>
        <Button 
            x:Name="MakePhotoButton"
        Text="Make Photo"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
            Clicked="MakePhotoButton_Clicked"
            />
    </VerticalStackLayout>
</ContentPage>